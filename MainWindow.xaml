<Window x:Class="VectorViewer_Personalized.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VectorViewer.Controls"
        Title="Vector Viewer" Width="1000" Height="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="6" HorizontalAlignment="Left">
            <Button x:Name="BtnLoadJson" Width="100" Height="28" Margin="0,0,6,0">Load JSON</Button>
            <TextBlock VerticalAlignment="Center" x:Name="LblCurrentFile">input.json (default)</TextBlock>
        </StackPanel>

        <local:ShapeCanvas Grid.Row="1" x:Name="DrawingCanvas" Background="White"/>
    </Grid>
</Window>
